<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.icia.board.BoardDao">
	<select id="Boardlist" resultType="com.icia.student.CourseBoard"> <!-- 첫 게시판 페이징 -->
	     <![CDATA[
	     SELECT *
	     FROM (
				SELECT /*+INDEX_DESC(courseboard cob_date)*/ ROWNUM RN, cob.*
				FROM cob
				WHERE ROWNUM<=#{pageNum}*10)
			WHERE RN>=#{pageNum}*10-9
			
			]]>

	</select>
	<insert id="boardWriteSelectKey" parameterType="com.icia.student.CourseBoard"
		useGeneratedKeys="true" keyProperty="cob_bonum">
		INSERT INTO COB VALUES(#{cob_idnum},{},#{cob_num},#{cob_id},#{cob_bonum},#{b_title},#{cob_cont}#{cob_date},#{cob_kind});
		</insert>

</mapper>